# Polymarket Trading Configuration
# Copy this file to .env and fill in your values

# Your Ethereum private key (for signing transactions on Polygon)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Your wallet address (the address that holds funds on Polymarket)
WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# Chain ID (137 = Polygon mainnet)
CHAIN_ID=137

# Signature type: 0 = EOA (MetaMask/hardware), 1 = email wallet, 2 = browser proxy
SIGNATURE_TYPE=0

# --- Trading Parameters ---

# Maximum cost for a single arbitrage pair (both sides combined), in USDC
MAX_BET_SIZE=50.0

# Minimum profit margin required (e.g., 0.01 = 1 cent per share pair)
MIN_PROFIT_MARGIN=0.01

# Maximum portion of bankroll to risk per trade (0.0-1.0)
MAX_BANKROLL_FRACTION=0.05

# Scan interval in seconds
SCAN_INTERVAL=2.0

# --- Market Filters ---

# Crypto assets to trade (comma-separated)
ASSETS=btc,eth,sol,xrp

# Market durations to trade (comma-separated)
DURATIONS=5m,15m

# --- Dry Run ---
# Set to true to simulate trades without executing
DRY_RUN=true
